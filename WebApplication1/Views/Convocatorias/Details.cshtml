@model WebApplication1.Models.Convocatoria

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        background: #1D2135;
        color: #000;
        font-family: Arial, Helvetica, sans-serif !important;

    }
    .news-container {
        background-color: #AFB0B6;
        color: black;
        padding: 20px;
        width: 100%;
        box-sizing: border-box;
        text-align: center;
        box-shadow: 2px 2px 5px #888;
       
    }
    

    .content-container {
        background-color: white;
        color: black;
        padding: 20px;
        width: 100%;
        box-sizing: border-box;
        text-align: justify;
        margin-top: 10px;
        box-shadow: 2px 2px 5px #888;
    }

    .image-container {
        text-align: center;
    }


    img {
        max-width: 100%;
        height: auto;
    }

    .button-container {
        text-align: center;
        margin-top: 10px;
    }

    .news-title {
        font-size: 40px; /* Tamaño de fuente más grande */
        font-weight: bold; /* Texto en negrita */
    }
    .news-content {
        font-size: 20px; /* Tamaño de fuente más grande para el contenido */
    }
    .news-creator{
        font-size: 18px;
    }
</style>

<div class="news-container">
    <h4 class="news-title">@Html.DisplayFor(model => model.Titulo)</h4>
</div>

<div class="content-container">
    <div class="image-container">
        <img src="@Html.DisplayFor(model => model.Imagen)" alt="Imagen de la Convocatoria" />
    </div>
    <p class="news-content">@Html.DisplayFor(model => model.Contenido)</p>
    <p class=" = news-creator">Nombre del Creador: @Html.DisplayFor(model => model.NombreCreador)</p>
     <div class="button-container">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-secondary">Editar</a>
        <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger">Eliminar</a>
    </div>
</div>

